{
  "name": "x-blocker",
  "displayName": "X Blocker",
  "version": "0.0.1",
  "description": "X利用制限Chrome拡張機能",
  "author": "ryokawamata",
  "scripts": {
    "dev": "node scripts/generate-icon.mjs && plasmo dev",
    "build": "node scripts/generate-icon.mjs && plasmo build",
    "package": "node scripts/generate-icon.mjs && plasmo package"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.6.2",
    "@plasmohq/storage": "^1.9.0",
    "plasmo": "^0.90.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.251",
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "autoprefixer": "^10.4.23",
    "daisyui": "^5.5.14",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.3.2"
  },
  "pnpm": {
    "overrides": {
      "sharp": "^0.34.5"
    },
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "@swc/core",
      "esbuild",
      "less",
      "lmdb",
      "msgpackr-extract",
      "sharp"
    ]
  },
  "manifest": {
    "permissions": [
      "storage",
      "tabs"
    ],
    "host_permissions": [
      "https://twitter.com/*",
      "https://x.com/*"
    ]
  }
}
