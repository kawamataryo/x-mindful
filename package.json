{
  "name": "x-blocker",
  "displayName": "Mindful Sites",
  "version": "0.0.1",
  "description": "対象サイトの利用制限Chrome拡張機能",
  "author": "ryokawamata",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "lint": "oxlint src",
    "lint:fix": "oxlint --fix src",
    "format": "oxfmt src package.json tsconfig.json tailwind.config.js postcss.config.js",
    "fix": "pnpm format && pnpm lint:fix",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.7.2",
    "@plasmohq/storage": "^1.15.0",
    "chart.js": "^4.4.7",
    "plasmo": "^0.90.5",
    "react": "^19.0.3",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^19.0.3"
  },
  "devDependencies": {
    "@testing-library/dom": "latest",
    "@testing-library/jest-dom": "latest",
    "@testing-library/react": "latest",
    "@testing-library/user-event": "latest",
    "@types/chrome": "^0.1.33",
    "@types/node": "^20.19.29",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitest/coverage-v8": "latest",
    "autoprefixer": "^10.4.23",
    "happy-dom": "latest",
    "oxfmt": "^0.24.0",
    "oxlint": "^1.39.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "latest",
    "vitest": "latest"
  },
  "pnpm": {
    "overrides": {
      "sharp": "^0.34.5"
    },
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "@swc/core",
      "esbuild",
      "less",
      "lmdb",
      "msgpackr-extract",
      "sharp"
    ]
  },
  "manifest": {
    "permissions": [
      "storage",
      "tabs"
    ],
    "host_permissions": [
      "<all_urls>"
    ]
  }
}
